<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imgPropA"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="Property Image"
        />

    <TextView
        android:id="@+id/tvPriceA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="@id/imgPropA"
        app:layout_constraintLeft_toRightOf="@id/imgPropA"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvAddressA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@id/tvPriceA"
        app:layout_constraintLeft_toLeftOf="@id/tvPriceA"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvBedroomsA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_bed"
        app:layout_constraintTop_toBottomOf="@id/tvAddressA"
        app:layout_constraintLeft_toLeftOf="@id/tvAddressA"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:text="4"

        />
    <TextView
        android:id="@+id/tvBathroomsA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBedroomsA"
        app:layout_constraintLeft_toLeftOf="@id/tvBedroomsA"
        android:drawableLeft="@drawable/ic_bath"
        android:layout_marginLeft="50dp"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/tvparkingA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBedroomsA"
        app:layout_constraintLeft_toLeftOf="@id/tvBathroomsA"
        android:drawableLeft="@drawable/ic_car"
        android:drawablePadding="5dp"
        android:layout_marginLeft="50dp"
        android:textSize="16sp"
        android:textColor="@color/black"

        />

    <android.widget.Button
        android:id="@+id/btnDeleteP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>